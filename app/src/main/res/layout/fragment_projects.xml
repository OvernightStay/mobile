<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.book.projects.ProjectsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/bg_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bg_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home"
        style="@style/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stress"
        style="@style/stress"
        app:layout_constraintStart_toEndOf="@id/home"
        app:layout_constraintTop_toTopOf="@id/home"
        app:layout_constraintBottom_toBottomOf="@id/home"/>

    <ImageView
        android:id="@+id/gear_wheel"
        style="@style/gear_wheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backpack"
        style="@style/backpack"
        app:layout_constraintEnd_toStartOf="@id/gear_wheel"
        app:layout_constraintTop_toTopOf="@id/rules" />

    <ImageView
        android:id="@+id/rules"
        style="@style/rules"
        app:layout_constraintEnd_toStartOf="@id/backpack"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cat_avatar"
        style="@style/cat_avatar"
        app:layout_constraintEnd_toEndOf="@id/gear_wheel"
        app:layout_constraintTop_toBottomOf="@id/gear_wheel" />

    <ImageView
        android:id="@+id/map"
        style="@style/map"
        app:layout_constraintEnd_toEndOf="@id/gear_wheel"
        app:layout_constraintTop_toBottomOf="@id/cat_avatar" />

    <ImageView
        android:id="@+id/back_arrow"
        style="@style/back_arrow"
        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintEnd_toEndOf="@id/gear_wheel"/>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/bg_book"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/bg_book">

        <TextView
            android:id="@+id/tv_night_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Ночной автобус"
            android:stateListAnimator="@animator/anim_image_click"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_house_shower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Неравнодуш"
            android:stateListAnimator="@animator/anim_image_click"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_house_rehabilitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Реабилитационный приют"
            android:stateListAnimator="@animator/anim_image_click"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_house_of_distribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Пункт выдачи"
            android:stateListAnimator="@animator/anim_image_click"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_house_warm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Пункт обогрева"
            android:stateListAnimator="@animator/anim_image_click"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/bg_book"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/bg_book">

        <TextView
            android:id="@+id/tv_house_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Культурная прачечная"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_house_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Ночной приют"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_house_consultation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Консультационный центр"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_house_nursing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Приют для пожилых"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_house_halfpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Дом на пол дороги"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>