<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="800dp"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_game_to_feed_the_needy"
    tools:context=".view.mini_games.GameToFeedTheNeedyFragment">

    <ImageView
        android:id="@+id/gear_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/gear_wheel"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/img_rules"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="@id/gear_wheel"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/img_map"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gear_wheel" />

    <View
        android:id="@+id/stress_bar_1"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/stress_bar_the_needy"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/stress_bar_2"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/stress_bar_the_needy"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/stress_bar_3"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="190dp"
        android:background="@drawable/stress_bar_the_needy"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/the_needy_1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="145dp"
        android:layout_marginBottom="126dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_the_needy_1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/the_needy_2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="320dp"
        android:layout_marginBottom="126dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_the_needy_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/the_needy_3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="126dp"
        android:importantForAccessibility="no"
        android:src="@drawable/img_the_needy_3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/teapod"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/img_teapod"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cup_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/img_cup"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cup_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/img_cup"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cup_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/img_cup"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/meal_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/img_meal"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/meal_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="210dp"
        android:background="@drawable/img_meal"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/meal_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/img_meal"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bread_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/img_bread"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bread_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/img_bread"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bread_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/img_bread"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cat_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/cat_status"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rectangle_100"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/status_name"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_name"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingEnd="10dp"
        android:text="Статус"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_next"
        android:layout_width="28dp"
        android:layout_height="29dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/dating_dialog_next"
        android:importantForAccessibility="no"
        android:src="@drawable/dating_dialog_next"
        android:textColorHint="#A5D38D"
        app:layout_constraintBottom_toBottomOf="@id/rectangle"
        app:layout_constraintEnd_toEndOf="@id/rectangle"
        android:stateListAnimator="@animator/anim_btn_next" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/cat_status"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>

